<%= form_tag(action: "create") do %>
  <table>
    <tbody>
      <% @words.in_groups_of(2, false) do |row| %>
        <tr>
          <% row.each do |word| %>
            <td><%= check_box_tag("#{word[:eng]}", "#{word[:rus]}") %></td>
            <td>
              <%= label_tag(:word_to_learn, "#{word[:eng]}") %> : <%= word[:rus] %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p><%= submit_tag("Write checked words to BD",class: "") %></p>
<% end %>